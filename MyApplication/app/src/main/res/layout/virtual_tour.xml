<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="640dp"
        tools:layout_editor_absoluteY="91dp">

        <ScrollView
            android:layout_width="410dp"
            android:layout_height="642dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="UA (Science Building)"
                    android:textSize="24sp"
                    tools:layout_editor_absoluteX="200dp"
                    tools:layout_editor_absoluteY="0dp" />

                <com.google.vr.sdk.widgets.pano.VrPanoramaView
                    android:id="@+id/vrPanoramaViewTest1"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="70dp">

                </com.google.vr.sdk.widgets.pano.VrPanoramaView>

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="UB (Business and IT Building)"
                    android:textSize="24sp"
                    tools:layout_editor_absoluteX="100dp"
                    tools:layout_editor_absoluteY="332dp" />

                <com.google.vr.sdk.widgets.pano.VrPanoramaView
                    android:id="@+id/vrPanoramaViewTest2"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="374dp">

                </com.google.vr.sdk.widgets.pano.VrPanoramaView>

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ERC (Energy and Nuclear Building)"
                    android:textSize="24sp"
                    tools:layout_editor_absoluteX="100dp"
                    tools:layout_editor_absoluteY="332dp" />

                <com.google.vr.sdk.widgets.pano.VrPanoramaView
                    android:id="@+id/vrPanoramaViewTest3"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="374dp">

                </com.google.vr.sdk.widgets.pano.VrPanoramaView>

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SIRC (Software Research Centre)"
                    android:textSize="24sp"
                    tools:layout_editor_absoluteX="100dp"
                    tools:layout_editor_absoluteY="332dp" />

                <com.google.vr.sdk.widgets.pano.VrPanoramaView
                    android:id="@+id/vrPanoramaViewTest4"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="374dp">

                </com.google.vr.sdk.widgets.pano.VrPanoramaView>


            </LinearLayout>

        </ScrollView>

    </android.support.constraint.ConstraintLayout>

</LinearLayout>