<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="640dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />
        </ScrollView>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="253dp"
            android:layout_height="44dp"
            android:layout_marginStart="100dp"
            android:layout_marginTop="75dp"
            android:layout_marginEnd="100dp"
            android:layout_marginBottom="598dp"
            android:text="TextView"
            android:textAlignment="center"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.575"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.493"
            tools:text="Extra-curriculars" />

        <Button
            android:id="@+id/nav_available"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="104dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="521dp"
            android:background="@color/colorPrimary"
            android:text="Available"
            android:textColor="@color/colorAccent"
            android:onClick="switchScreen"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/nav_upcoming"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />

        <Button
            android:id="@+id/nav_upcoming"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="104dp"
            android:layout_marginBottom="521dp"
            android:background="@color/colorPrimary"
            android:text="Upcoming"
            android:textColor="@color/colorAccent"
            android:onClick="switchScreen"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/nav_available"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />

        <TextView
            android:id="@+id/textsu"
            android:layout_width="200dp"
            android:layout_height="117dp"
            android:layout_marginStart="100dp"
            android:layout_marginTop="200dp"
            android:layout_marginBottom="30dp"
            android:text="Student Union Elections"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2"
            android:textSize="30sp"
            app:layout_constraintBottom_toTopOf="@+id/text_ri3d"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@color/colorAccent"/>

        <TextView
            android:id="@+id/text_elections"
            android:layout_width="204dp"
            android:layout_height="116dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="100dp"
            android:layout_marginBottom="30dp"
            android:background="@color/colorAccent"
            android:text="Society Elections"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2"
            android:textSize="30sp"
            app:layout_constraintBottom_toTopOf="@+id/text_motorsports"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textsu" />

        <TextView
            android:id="@+id/text_bravethefuture"
            android:layout_width="196dp"
            android:layout_height="120dp"
            android:layout_marginStart="100dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:background="@color/colorAccent"
            android:text="Brave The Future"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_ri3d" />

        <ImageButton
            android:id="@+id/nav_bravethefuture"
            android:layout_width="170dp"
            android:layout_height="133dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="31dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="14dp"
            android:scaleType="fitCenter"
            android:onClick="switchScreen"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/text_motorsports"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_ri3d"
            app:srcCompat="@drawable/btf_logo_main" />

        <ImageButton
            android:id="@+id/nav_societyelections"
            android:layout_width="170dp"
            android:layout_height="137dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="34dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="34dp"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toTopOf="@+id/text_motorsports"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/text_ri3d"
            app:layout_constraintTop_toBottomOf="@+id/textsu"
            app:srcCompat="@drawable/soce" />

        <ImageButton
            android:id="@+id/nav_studentunionelections"
            android:layout_width="170dp"
            android:layout_height="137dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="45dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="25dp"
            android:scaleType="fitCenter"
            android:onClick="switchScreen"
            app:layout_constraintBottom_toTopOf="@+id/text_ri3d"
            app:layout_constraintEnd_toStartOf="@+id/textsu"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nav_available"
            app:srcCompat="@drawable/sue1" />

    </android.support.constraint.ConstraintLayout>
</LinearLayout>
